<!-- Form for the project resource - used for creating and updating projects-->
<%= form_for(@project) do |f| %>

	<%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description, :id => "resize-texfield" %>

  <%= f.label :collabarators %>
  <%= f.text_field :collabarators %>

  <%= f.submit :id => "submit" %>
<% end %>